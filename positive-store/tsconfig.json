{
  "compilerOptions": {
    "module": "esnext",
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react",
    "types": ["node"],
    "esModuleInterop": true,
    "typeRoots": ["./src/types"],
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "../node_modules/*"]
    }
  }
}
